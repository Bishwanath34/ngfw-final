{
  "version": "v1-demo",
  "signatures": [
    {
      "id": "sig-sqli-basic",
      "description": "Basic SQL injection keywords in path",
      "pathRegex": "(?i)(union.*select|or 1=1|drop table|--)",
      "risk": 0.6,
      "action": "block"
    },
    {
      "id": "sig-admin-scan-guest",
      "description": "Guests scanning /admin",
      "pathContains": "/admin",
      "roles": ["guest"],
      "risk": 0.4,
      "action": "block"
    },
    {
      "id": "sig-scripted-ua",
      "description": "Scripted user-agents",
      "userAgentContains": "curl",
      "risk": 0.3,
      "action": "observe"
    }
  ]
}
